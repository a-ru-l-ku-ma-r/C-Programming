/****************************************************************************************
                                    C++ User Input
****************************************************************************************/
// Get two numbers from user
// then add the two numbers and print the output of sum

#include <iostream>

int main()
{
    int first_num, second_num, sum;
    
    std::cout<<"Enter the first number : \n";
    std::cin>>first_num;
    
    std::cout<<"\nEnter the second number : \n";
    std::cin>>second_num;   
    
    sum = first_num + second_num;
    std::cout<<"\nsum = " << sum;

    return 0;
}

// *************************************************************************************
Output :
Enter the first number : 
8

Enter the second number : 
7

sum = 15
